<VBox prefHeight="853.0" prefWidth="843.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.MyTunes.GUI.AppController">
   <children>
      <SplitPane fx:id="splitPane" dividerPositions="0.5" style="-fx-background-color: #192638;" styleClass="splitPane" stylesheets="@style.css" VBox.vgrow="SOMETIMES">
         <items>
            <VBox alignment="BOTTOM_LEFT" spacing="10.0">
               <children>
                  <HBox>
                     <children>
                            <Button fx:id="renamePlaylist" mnemonicParsing="false" onAction="#renamePlaylist" styleClass="rename-button" />
                            <Button fx:id="deletePlaylist" mnemonicParsing="false" onAction="#deletePlaylist" styleClass="delete-button" />
                     </children>
                  </HBox>
                  <TableView fx:id="tablePlaylists" onMouseClicked="#displaySongs" prefHeight="558.0" prefWidth="420.0" style="-fx-background-color: #0f151f;" styleClass="tableViewDB">
                     <columns>
                        <TableColumn fx:id="colPlaylistName" prefWidth="279.20001834630966" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Name" />
                        <TableColumn fx:id="colSongCount" prefWidth="46.39996337890625" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Songs" />
                        <TableColumn fx:id="colLength" prefWidth="93.60003662109375" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Length" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="10">
                     <children>
                            <Button fx:id="prevButton" mnemonicParsing="false" onAction="#prev" styleClass="prev-button" />
                            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stop" styleClass="stop-button" />
                            <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pause" styleClass="pause-button" />
                            <Button fx:id="playButton" mnemonicParsing="false" onAction="#play" styleClass="play-button" />
                            <Button fx:id="nextButton" mnemonicParsing="false" onAction="#next" styleClass="next-button" />
                        <Slider fx:id="volumeSlider" onDragDone="#setVolume" styleClass="volume-slider" />
                     </children>
                  </HBox>
                       <VBox fx:id="imageArtParent" alignment="CENTER" spacing="5.0">
                         <ImageView fx:id="albumArt" fitHeight="193.0" fitWidth="301.0" pickOnBounds="true">
                             <image>
                                 <Image url="@Icons/defaultalbum.png" />
                             </image>
                        <viewport>
                           <Rectangle2D />
                        </viewport>
                         </ImageView>
                           <Label text="Song Name" textFill="WHITE">
                               <font>
                                   <Font name="Arial Black" size="12.0" />
                               </font>
                           </Label>
                           <Label text="Artist" textFill="WHITE">
                               <font>
                                   <Font name="Arial Italic" size="12.0" />
                               </font>
                           </Label>
                       </VBox>
               </children>
            </VBox>
            <VBox alignment="BOTTOM_RIGHT">
               <children>
                  <HBox>
                     <children>
                            <Button fx:id="savePlaylist" mnemonicParsing="false" onAction="#savePlaylist" styleClass="savePlaylist-button" />
                     </children>
                  </HBox>
                      <TableView fx:id="tableSongsFromPlayList" style="-fx-border-width: 0.05; -fx-background-color: #0f151f;">
                          <columns>
                              <TableColumn fx:id="columnSongs" prefWidth="120.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Songs" />
                              <TableColumn fx:id="columnArtists" prefWidth="64.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Artists" />
                              <TableColumn fx:id="columnLength" prefWidth="64.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Length" />
                              <TableColumn fx:id="columnFileType" prefWidth="60.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="File Type" />
                          </columns>
                      </TableView>
                  <HBox>
                     <children>
                            <Button fx:id="removeSong" mnemonicParsing="false" onAction="#removeSong" styleClass="remove-button" />
                            <Button fx:id="addSong" mnemonicParsing="false" onAction="#addSong" styleClass="addSong-button" />
                            <TextField promptText="Search" style="-fx-opacity: .75; -fx-background-color: #5c6978;" />
                        <Button mnemonicParsing="false" onAction="#openUpdateWindow" />
                     </children>
                  </HBox>
                      <TableView fx:id="tableViewDB" style="-fx-background-color: #0f151f;" styleClass="tableViewDB">
                          <columns>
                              <TableColumn fx:id="columnSongsDB" prefWidth="120.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Songs" />
                              <TableColumn fx:id="columnArtistsDB" prefWidth="64.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Artists" />
                              <TableColumn fx:id="columnLengthDB" prefWidth="64.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="Length" />
                              <TableColumn fx:id="columnFileTypeDB" prefWidth="60.0" style="-fx-background-color: #323d4d; -fx-border-color: #878c94; -fx-border-width: .5;" text="File Type" />
                          </columns>
                      </TableView>
               </children>
            </VBox>
         </items>
      </SplitPane>
   </children>
</VBox>
